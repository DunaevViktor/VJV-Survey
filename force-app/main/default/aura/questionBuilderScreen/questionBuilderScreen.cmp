<aura:component access="global" implements="lightning:availableForFlowScreens">
  <aura:attribute
    name="templates"
    type="Survey__c[]"
    default=""
    access="global"
  />
  <aura:attribute
    name="standardQuestions"
    type="Question__c[]"
    default=""
    access="global"
  />
  <aura:attribute
    name="questions"
    type="Question__c[]"
    default=""
    access="global"
  />
  <aura:attribute
    name="templateQuestions"
    type="Question__c[]"
    default=""
    access="global"
  />

  <c:questionBuilderScreenBody
    templates="{!v.templates}"
    templateQuestions="{!v.templateQuestions}"
    standardQuestions="{!v.standardQuestions}"
    questions="{!v.questions}"
    onquestionschange="{!c.changeQuestions}"
    ontemplateschange="{!c.changeTemplates}"
    ontquestionschange="{!c.changeTemplateQuestions}"
    onstquestionschange="{!c.changeStandardQuestions}"
    onprevious="{!c.onPrevious}"
    onnext="{!c.onNext}"
  >
  </c:questionBuilderScreenBody>
</aura:component>