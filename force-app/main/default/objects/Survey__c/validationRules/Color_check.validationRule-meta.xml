<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Color_check</fullName>
    <active>true</active>
    <errorConditionFormula>NOT( REGEX( Background_Color__c , &quot;^#([a-fA-F0-9]{3}|[a-fA-F0-9]{6})$&quot;))</errorConditionFormula>
    <errorDisplayField>Background_Color__c</errorDisplayField>
    <errorMessage>You have to input color in hexadecimal format</errorMessage>
</ValidationRule>